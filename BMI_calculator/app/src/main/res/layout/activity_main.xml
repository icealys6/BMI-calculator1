<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.icealys.bmi_calculator.MainActivity">


    <TextView
        android:id="@+id/weight"
        android:text="Weight in Pounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/weightInputText"
        android:layout_below="@+id/weight"
        android:text="Pounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/height"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/height"
        android:layout_below="@+id/weightInputText"
        android:text="Height in Inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/heightInputText"
        android:text="Inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/height"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/height" />
    <Button
        android:id="@+id/calcBMI"
        android:text="Calculate"
        android:onClick="calcBMI"
        android:layout_below="@+id/heightInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/BMIoutput"
        android:text="Result"
        android:layout_below="@+id/calcBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
